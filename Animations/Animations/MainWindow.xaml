                    </TextBlock>

                    <TextBlock>
                        <Hyperlink NavigateUri="Pages/SimplePathAnimation.xaml" TargetName="frame">
                            简单的路径动画
                        </Hyperlink>
                    </TextBlock>

                    <TextBlock>
                        <Hyperlink NavigateUri="Pages/UnicycleMan.xaml" TargetName="frame">
                            单轮车
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
                

            <GridSplitter Grid.Column="1" Width="4" VerticalAlignment="Stretch" Background="Silver"/>

            <Frame Grid.Column="2" Name="frame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </NavigationWindow.Content>
</NavigationWindow>
